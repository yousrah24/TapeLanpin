<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context=".controller.AccueilActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginBottom="20dp"
        android:background="#c3e8ff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gaming_logo" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="#f5acc5"
        >


        <TextView
            android:id="@+id/nom"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Yousrah SOULE"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="normal"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/score"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="129 POINTS"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/dateInsr"
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="Membre depuis le 2002/02/23"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="normal"
            android:typeface="serif" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="#c3e8ff"
            android:text="AmÃ©liorer mon score"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="147dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"
            android:text="Quitter"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="147dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Classement des joueurs"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="20dp"
        android:typeface="monospace"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scrollbars="horizontal|vertical"
        android:paddingBottom="10dp"
        />


</LinearLayout>